<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="olya">
        <createSequence incrementBy="1" sequenceName="order_sequence_name" startValue="1"/>
    </changeSet>
    <changeSet id="2" author="olya">
        <createTable tableName="ord">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_order"/>
            </column>
            <column name="number" type="BIGINT"/>
            <column name="order_date" type="TIMESTAMP"/>
            <column name="customer_id" type="BIGINT"/>
            <column name="product_id" type="BIGINT"/>
            <column name="product_name" type="VARCHAR(255)"/>
            <column name="price" type="DOUBLE"/>
            <column name="count" type="BIGINT"/>
            <column name="sum" type="DOUBLE"/>
        </createTable>
    </changeSet>

</databaseChangeLog>